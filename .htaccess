# =========================================================
# Artisan Wood URL Rewriting
# Hilangkan .php dari URL
# =========================================================
Options +FollowSymLinks
RewriteEngine On

# Pastikan file & folder asli tetap bisa diakses
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Arahkan semua request tanpa .php ke file aslinya
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L,QSA]
